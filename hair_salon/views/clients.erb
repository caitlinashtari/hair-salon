<div class="card-panel teal lighten-2">
  <% if @clients.any?() %>
  <p>Click on a client to see their info:</p>

  <ul>
    <% @clients.each do |client| %>
    <li><a href="/clients/<%= client.id() %>"><%= client.name() %></a></li>
    <% end %>
  </ul>
  <% else %>
  <p>There are no clients yet!</p>
  <% end %>

  <div class="container">
    <a href="/"><button class="btn">Home</a>
  </div>
</div>
